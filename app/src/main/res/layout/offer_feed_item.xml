<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cont_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_padding_small"
    android:paddingRight="@dimen/margin_padding_small"
    android:paddingTop="@dimen/margin_padding_small">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/im_bank_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/lbl_company_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_padding_small"
                    android:layout_marginStart="@dimen/margin_padding_small"
                    android:layout_toEndOf="@+id/im_bank_icon"
                    android:layout_toRightOf="@+id/im_bank_icon"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:text="Bank Name Here"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

            </RelativeLayout>


            <FrameLayout
                android:id="@+id/image_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_small">

                <com.manitaz.turbit.ui.custom.ProportionalImageView
                    android:id="@+id/im_item_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/turbit_loader" />

            </FrameLayout>

            <TextView
                android:id="@+id/tagline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/secondary_text"
                android:padding="@dimen/margin_padding_small"
                android:text="Buy one get one free"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/offer_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_padding_small"
                android:text="Offer valid from to"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/offerb_low_padding"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_like"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:text="Like"
                    android:layout_margin="@dimen/margintopleftRight"
                    android:textColor="@color/primary_dark"
                    android:background="@drawable/feed_button"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_dislike"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:text="Dislike"
                    android:layout_margin="@dimen/margintopleftRight"
                    android:textColor="@color/primary_dark"
                    android:background="@drawable/feed_button"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_useful"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:text="Useful"
                    android:layout_margin="@dimen/margintopleftRight"
                    android:textColor="@color/primary_dark"
                    android:background="@drawable/feed_button"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
