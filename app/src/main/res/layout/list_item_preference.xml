<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_with_cb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imBankIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/lblListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/imBankIcon"
        android:layout_alignBottom="@+id/imBankIcon"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/lstCheckBox"
        android:layout_toRightOf="@+id/imBankIcon"
        android:clickable="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:text="Prefrence name"
        android:textSize="@dimen/text_size_grid_medium" />

    <CheckBox
        android:id="@+id/lstCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_padding_small"
        android:focusable="false"
        android:clickable="false"
        android:focusableInTouchMode="false" />

</RelativeLayout>